extends layout

block content
    form(class="form")
        div(class="form-group")
            label(for="exampleInputUser") '用户名'
            input(class="form-control", type='text', id="exampleInputUser" , placeholder="用户名")
        div(class="form-group")
            label(for="exampleInputPsd") '密码'
            input(class="form-control", type='text', id="exampleInputPsd" , placeholder="密码")
        div(class="form-group")
            label(for="exampleInputRePsd") '重复密码'
            input(class="form-control", type='text', id="exampleInputRePsd" , placeholder="重复密码")
        div(class="form-group")
            label(for="exampleInputSex") '性别'
            select(class="form-control", type='text', id="exampleInputSex")
                option(value="1") 男
                option(value="2") 女
        div(class="form-group")
            label(for="exampleInputFile") 上传头像
            input(type="file", id="exampleInputFile")
            p(class="help-block") 请上传一张有趣的图像.
        div(class="form-group")
            label(for="exampleInputUserJj") '个人简介'
            textarea(class="form-control")
        button(class="btn btn-primary") 注册